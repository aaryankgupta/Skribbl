<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<title>Skribbl</title>
<script defer src="http://localhost:5500/socket.io/socket.io.js"></script>
<script defer src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
<script defer src="script.js"></script>
<style>
    body {
        background-image: url("/images/background.png");
    }
    #leaderboard-button {
        position:relative;
        top: 20px;
    }
    div.container {
        position: absolute;
        top:0;
        bottom: 0;
        left: 0;
        right: 0;
        
        margin: auto;
        background-color: lightgrey;
        width: 600px;
        height: 400px;
        border: 15px solid rgb(32, 134, 202);
        box-shadow: 10px 10px rgb(22, 38, 88);
        padding: 50px;
    }
    div.center {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
</head>
<body>
    <div id="room-container" class="container">
        <form action="/room" method="POST">
            <div class="center">
                Room Name : <input name="room" type="text" required>
                <button  class="btn btn-info" type="submit">New Public Room</button>
            </div>
        </form>
        <br>
        <div class="center">
            <a href="/private" class="btn btn-info" role="button">Create/Join Private Room</a>
        </div>
        <br>
        <div class="center">
            <h2>Active Public Rooms</h2>
        </div>
        <% Object.keys(rooms).forEach(room => { %>
            <% if(!rooms[room].id){ %>
                <div class="center">
                <%= room %>
                <br>
                    <a href="/<%= room %>" class="btn btn-info" role="button">Join Room</a>
                </div>
            <% } %>
        <% }) %>

    
        <div class="center">
            <a href="/leaderboard" class="btn btn-info" id="leaderboard-button" role="button">Global Leaderboard</a>
        </div>
    
    </div>
</body>
</html>
